<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TransactionHistoryActivity">

    <include layout="@layout/toolbar_transaction_history"/>

    <!-- Toolbar for filter -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="?attr/actionBarTheme">

        <!-- Add filter button -->
        <Button
            android:id="@+id/btnFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter waktu dan tanggal"
            android:onClick="showFilterPopup"/>

        <!-- Add other buttons or components as needed -->

    </androidx.appcompat.widget.Toolbar>

    <!-- Content of your Transaction History Activity -->
    <!-- ... -->

</LinearLayout>
