<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordNewPasswordActivity"
    android:orientation="vertical">
    <include layout="@layout/toolbar_masuk"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="61dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginBottom="17dp"
            android:text="Masukkan kode OTP yang telah dikirimkan melalui Email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        >
        <!-- Name Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="19dp"
            android:layout_marginVertical="66dp">

            <TextView
                android:id="@+id/passBaruLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password Baru"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/editTextPassBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:ems="10"
                android:hint="Password Baru"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/konfirmLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi password"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/editTextKonfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:ems="10"
                android:hint="Konfirmasi Password"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/lanjutbtn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perbarui"
        android:layout_marginTop="58dp"
        android:layout_marginHorizontal="40dp"/>
</LinearLayout>