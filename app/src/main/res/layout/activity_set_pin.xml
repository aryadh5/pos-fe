<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SetPinActivity"
    android:orientation="vertical">
    <include layout="@layout/toolbar_daftar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan buat PIN Anda terlebih dahulu"
        android:layout_gravity="center"
        android:layout_marginTop="43px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Namaowner"
        android:layout_gravity="center"
        android:layout_marginTop="51dp"
        />
    <LinearLayout
        android:id="@+id/codeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginHorizontal="19dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/digit1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:maxLength="2"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/digit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:maxLength="2"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/digit3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:maxLength="2"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/digit4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:imeOptions="actionDone"
            android:maxLength="2"
            android:maxLines="1"
            android:textAlignment="center" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/showPinCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show PIN"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="onShowPinClicked" />
</LinearLayout>